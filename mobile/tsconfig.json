{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "paths": {
      "@components/*": ["components/*"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@organisms/*": ["components/organisms/*"],
      "@layout/*": ["components/layout/*"],
      "@pages/*": ["components/pages/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"],
      "@app/*": ["app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
